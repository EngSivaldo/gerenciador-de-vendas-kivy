<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"  # Define uma imagem de fundo para o rótulo (label)                    
            pos_hint: {"right": 0.85, "top": 0.95}  # Define a posição do rótulo dentro do layout
            size_hint: 0.7, 0.2  # Define o tamanho do rótulo dentro do layout
            text: 'Total de Vendas R$ 1'  # Exibe o texto "Seu ID Único: 1" no rótulo
            id: label_total_vendas  # Define um identificador para o rótulo
            markup: True # pemite parte do texto editado
        #pemite rolar lista vendas pra cima e baixo
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas    
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: '90dp'
                row_force_default: True
                    
            
       # 3botoes no rodape da homepage
        GridLayout:
            rows: 1 # Define três colunas no GridLayout
            pos_hint: {"right": 1, "top": 0.12}  # Define a pos do GridLayout  rodapé
            size_hint: 1, 0.12  # Define o tamanho do GridLayout
            canvas.before:
                Color:
                    rgba: (0.75, 0.75, 0.75, 0.5)  # Cor do retângulo de fundo
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/add.png"
                on_release: app.mudar_tela('adicionarvendaspage')
            ImageButton:
                source: "icones/salesman.png"
                on_release: app.mudar_tela('listarvendedorespage')
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela('ajustespage')
