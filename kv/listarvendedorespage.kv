<ListarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size 
                pos: self.pos
                source: "icones/bg1.png"

        #lista de vendedores
        ScrollView:
            pos_hint: {"right": 1, "top": 0.9}
            size_hint: 1, 0.78
            GridLayout:
                cols: 1
                id: lista_vendedores 
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: '90dp'
                row_force_default: True
        

        #botao de voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}  # Define a posição do layout
            size_hint: 1, 0.12  # Define o tamanho do layout flutuante dentro do la
            canvas: 
                Color: 
                    rgba: (0.0, 0.75, 0.75, 0.5)  # Define a cor do retângulo como 
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}  # Define a posição do botão de
                size_hint: 0.2, 0.8  # Define o tamanho do botão dentro do layout 
                source: "icones/voltar.png"  # Define a imagem do botão
                on_release: app.mudar_tela('homepage')  # Chama o método mudar_tela 
        
