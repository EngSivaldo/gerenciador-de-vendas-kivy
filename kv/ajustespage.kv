<AjustesPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size 
                pos: self.pos
                source: "icones/bg1.png"  # Define uma imagem de fundo para o layout
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"  # Define uma imagem de fundo para o rótulo (label)                    
            pos_hint: {"right": 0.85, "top": 0.95}  # Define a posição do rótulo dentro do layout
            size_hint: 0.7, 0.2  # Define o tamanho do rótulo dentro do layout
            bold: True  # Define o texto como negrito
            text: 'Seu ID Único: 1'  # Exibe o texto "Seu ID Único: 1" no rótulo
            id: id_vendedor  # Define um identificador para o rótulo

        # Botão para mudar a foto de perfil
        ImageButton:
            pos_hint: {'right': 0.5, 'top': 0.7}  # Define a posição do botão dentro do layout
            size_hint: 0.5, 0.15  # Define o tamanho do botão dentro do layout
            source: "icones/foto_perfil.png"  # Define a imagem do botão
            on_release:  app.mudar_tela('fotoperfilpage')  # Ação ao clicar no botão

        LabelButton:  
            pos_hint: {'right': 0.9, 'top': 0.7}  # Define a posição do botão de texto dentro do layout
            size_hint: 0.5, 0.15  # Define o tamanho do botão de texto dentro do layout
            text: 'Mudar foto de Perfil'  # Exibe o texto "Mudar foto de Perfil" no botão
            on_release: app.mudar_tela('fotoperfilpage')  # Ação ao clicar no botão de texto

        # Botão para adicionar vendedor 
        ImageButton:
            pos_hint: {'right': 0.5, 'top': 0.5}  # Define a posição do botão dentro do layout
            size_hint: 0.5, 0.15  # Define o tamanho do botão dentro do layout
            source: "icones/adicionar_vendedor.png"  # Define a imagem do botão
            on_release: app.mudar_tela('adicionarvendedorpage')  # Ação ao clicar no botão

        LabelButton:  
            pos_hint: {'right': 0.9, 'top': 0.5}  # Define a posição do botão de texto dentro do layout
            size_hint: 0.5, 0.15  # Define o tamanho do botão de texto dentro do layout
            text: 'Acompanhar Vendedor'  # Exibe o texto "Acompanhar Vendedor" no botão
            on_release: app.mudar_tela('adicionarvendedorpage')  # Ação ao clicar no botão de texto

        # Botão para ver todas as vendas 
        ImageButton:
            pos_hint: {'right': 0.5, 'top': 0.3}  # Define a posição do botão dentro do layout
            size_hint: 0.5, 0.15  # Define o tamanho do botão dentro do layout
            source: "icones/vendas_empresa.png"  # Define a imagem do botão
            on_release: on_release: app.mudar_tela('todasvendaspage')  # Ação ao clicar no botão

        LabelButton:  
            pos_hint: {'right': 0.9, 'top': 0.3}  # Define a posição do botão de texto dentro do layout
            size_hint: 0.5, 0.15  # Define o tamanho do botão de texto dentro do layout
            text: 'Ver Todas Vendas'  # Exibe o texto "Ver Todas Vendas" no botão
            on_release: on_release: app.mudar_tela('todasvendaspage')  # Ação ao clicar no botão de texto

        # Botão de voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}  # Define a posição do layout
            size_hint: 1, 0.12  # Define o tamanho do layout flutuante dentro do la
            canvas: 
                Color: 
                    rgba: (0.0, 0.75, 0.75, 0.5)  # Define a cor do retângulo como 
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}  # Define a posição do botão de
                size_hint: 0.2, 0.8  # Define o tamanho do botão dentro do layout 
                source: "icones/voltar.png"  # Define a imagem do botão
                on_release: app.mudar_tela('homepage')  # Chama o método mudar_tela 
