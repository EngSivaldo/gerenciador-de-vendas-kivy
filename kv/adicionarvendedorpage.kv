<AdicionarVendedorPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size 
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            bold: True
            text: 'Insira o [color=#00cfde] ID de outro Vendedor[/color] para acompanhá-lo'
            markup: True

        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png '
            on_release: app.adicionar_vendedor(input_id_outrovendedor.text)
            text: 'Adicionar Vendedor'
            pos_hint: {'right': 0.9, 'top': 0.55}
            size_hint: 0.8, 0.2

        TextInput:
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
            id: input_id_outrovendedor

        Label:
            text: ""
            markup: True
            bold: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1
            id: mensagem_outrovendedor
            
        #botao de voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}  # Define a posição do layout
            size_hint: 1, 0.12  # Define o tamanho do layout flutuante dentro do la
            canvas: 
                Color: 
                    rgba: (0.0, 0.75, 0.75, 0.5)  # Define a cor do retângulo como 
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}  # Define a posição do botão de
                size_hint: 0.2, 0.8  # Define o tamanho do botão dentro do layout 
                source: "icones/voltar.png"  # Define a imagem do botão
                on_release: app.mudar_tela('ajustespage')  # Chama o método mudar_tela 
            

         
