#:kivy 2.0.0
#:include kv/homepage.kv
#:include kv/ajustespage.kv

FloatLayout:
    canvas: 
        Color: 
            rgb: (0.0, 0.094, 0.141)  # Cor manualmente convertida do hexadecimal #001824 para RGB
        Rectangle:
            size: self.size 
            pos: self.pos
    Image:
        pos_hint: {'right':1, 'top': 0.9}
        size_hint: 1, 0.2
        source: 'icones/hash.png'
    ScreenManager:
        pos_hint: {'right': 1, 'top': 0.7}
        size_hint: 1, 0.7
        id: screen_manager
        HomePage:
            name: "homepage"
            id: homepage
        AjustesPage:
            name: "ajustespage"

<HomePage>:
    FloatLayout:
        canvas: 
            Rectangle:
                size: self.size 
                pos: self.pos
                source: "icones/bg1.png"
        LabelButton:
            pos_hint: {"height": 1, "top": 1}
            size_hint: 1, 0.85
            text: "estou na HomePage - Ir para ajustes"
            on_release: app.mudar_tela("ajustespage")
        Button:
            pos_hint: {"height": 1, "top": 0.15}
            size_hint: 0.33, 0.15
            text: 'Ir para ajustes'
            on_release: app.mudar_tela("ajustespage")
