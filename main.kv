        Rectangle:
            size: self.size 
            pos: self.pos
    Image:
        pos_hint: {'right':1, 'top': 0.9}
        size_hint: 1, 0.2
        source: 'icones/hash.png'
        id: foto_perfil
    ScreenManager:
        pos_hint: {'right': 1, 'top': 0.7}
        size_hint: 1, 0.7
        id: screen_manager#por padrao abre em login
        LoginPage:
            name: 'loginpage'
            id: loginpage
        HomePage:
            name: "homepage"
            id: homepage
        AjustesPage:
